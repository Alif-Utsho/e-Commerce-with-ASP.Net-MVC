
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!--start page wrapper -->
<div class="page-wrapper">
    <div class="page-content">


        <div class="card">
            <div class="card-body p-4">
                <h5 class="card-title">Add New Coupon</h5>
                <hr />
                <div class="form-body mt-4">
                    <form action="@Url.Action("Upload", "Coupon")" method="post" enctype="multipart/form-data">
                        <div class="row justify-content-center">

                            <div class="col-lg-8">
                                <div class="border border-3 p-4 rounded">
                                    <div class="mb-3">
                                        <label for="inputProductTitle" class="form-label">Coupon Code *</label>
                                        <input type="text" class="form-control" id="inputProductTitle" placeholder="Coupon code" name="coupon" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputProductDescription" class="form-label">Discount *</label>
                                        <div class="d-flex">
                                            <input type="text" class="form-control" id="inputProductDescription" placeholder="Enter Discount" name="discount" required>
                                            <input type="checkbox" name="percentage" class="form-check mx-2" id="percentage" value="true" />
                                            <label for="percentage" class="mt-1">Percentage</label>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="orderAmount" class="form-label">Minimum Order Amount *</label>
                                        <input type="text" class="form-control" id="orderAmount" placeholder="Minimum order amount" name="order_amount" required>
                                    </div>

                                    <div class="mb-3">
                                        <input type="submit" class="btn btn-primary" >
                                    </div>

                                </div>
                            </div>
                            
                        </div><!--end row-->
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>
<!--end page wrapper -->