@model IEnumerable<ECMS.Models.Database.CouponCode>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0">Coupons</h5>
                    </div>
                    <div class="font-22 ms-auto">
                        <a href="@Url.Action("Create", "Coupon")" class="btn btn-primary mb-3 mb-lg-0"><i class='bx bxs-plus-square'></i>New Coupon</a>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sl.</th>
                                <th>Coupon</th>
                                <th>Discount</th>
                                <th>Min. Order</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int serialNumber = 1;
                            }
                            @foreach (var coupon in Model)
                            {
                                <tr>
                                    <td>@serialNumber</td>

                                    <td>@coupon.coupon</td>
                                    <td>@coupon.discount@(coupon.percentage ? "%" : "")</td>
                                    <td>$@coupon.order_amount</td>

                                    <td>
                                        <div class="d-flex order-actions">
                                            <a href="@Url.Action("Edit", "Coupon", new {id= coupon.id})" class=""><i class="bx bx-edit"></i></a>
                                            <a href="@Url.Action("Delete", "Coupon", new {id= coupon.id})" class="ms-4"><i class='bx bx-trash'></i></a>
                                        </div>
                                    </td>
                                </tr>
                                serialNumber++;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>