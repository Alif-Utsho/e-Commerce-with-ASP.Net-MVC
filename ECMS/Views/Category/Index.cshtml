@model IEnumerable<ECMS.Models.Entities.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0">Categories</h5>
                    </div>
                    <div class="font-22 ms-auto">
                        <a href="@Url.Action("Create", "Category")" class="btn btn-primary mb-3 mb-lg-0"><i class='bx bxs-plus-square'></i>Add New</a>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Description
                                </th>

                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        <img src="@Url.Content(item.image)" alt="" width="40" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>

                                    <td>
                                        <div class="d-flex order-actions">
                                            <a href="@Url.Action("Edit", "Category", new {id= item.id})" class=""><i class="bx bx-edit"></i></a>
                                            <a href="@Url.Action("Delete", "Category", new {id= item.id})" class="ms-4"><i class='bx bx-trash'></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>