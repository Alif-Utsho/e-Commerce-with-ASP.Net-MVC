@model IEnumerable<ECMS.Models.Database.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <div class="card radius-10">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="mb-0">Users</h5>
                    </div>
                    <div class="font-22 ms-auto">
                        <a href="@Url.Action("Create", "Admin")" class="btn btn-primary mb-3 mb-lg-0"><i class='bx bxs-plus-square'></i>Add New</a>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    E-Mail
                                </th>
                                <th>
                                    Image
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image)
                                    </td>
                                    <td>
                                        <div class="d-flex order-actions">
                                            <a href="@Url.Action("Edit", "Admin", new {id= item.id})" class=""><i class="bx bx-edit"></i></a>
                                            <a href="@Url.Action("Delete", "Admin", new {id= item.id})" class="ms-4"><i class='bx bx-trash'></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!--end row-->
    </div>
</div>
<!--end page wrapper -->
